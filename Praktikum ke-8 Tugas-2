print("Selamat datang di kalkulator online")
a = float(input("Masukan angka: "))
b = int(input("Masukkan pangkat: "))

def pangkat(a,b):

    if b >= 1 :
        return a * pangkat(a, b - 1)

    return a
hasil = pangkat(a, b)

print(f"hasil nya adalah = {hasil}")
